

<h1 class="text-center mt-4"><%= @article.title %></h1>
  <div class="container">
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-italic">
              <%= @article.user.username if @article.user %>
              <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
            </div>
            <div class="card-body">
              <p class="card-text">  <%= simple_format(@article.description) %></p>
              <% if logged_in? && (@article.user == current_user || current_user.admin?) %>
              <button type="button" class="btn btn-outline-info"><%= link_to 'Edit' , edit_article_path(@article) %></button>
              <button type="button" class="btn btn-outline-danger"><%= link_to 'Delete' , article_path(@article.id), method: :delete, data:{confirm:"Are you sure?"} %></button>
              <% end %>
            </div>
            <div class="card-footer text-muted">
              <small>Created <%= time_ago_in_words(@article.created_at) %> ago, edited <%= time_ago_in_words(@article.updated_at) %></small>
            </div>
          </div>
        </div>
      </div>
  </div>

